---
	import Layout from "../layouts/Layout.astro";
---

<Layout>
    <!-- ================= SECCIÓN PROYECTOS ================= -->
  <section id="proyectos">
    <div class="container">
      <div class="seccion-titulo text-center mb-4">
        <h2>Mis Proyectos</h2>
      </div>
      <!-- Carrusel de proyectos con Bootstrap -->
      <div class="card shadow-lg border-0 rounded-4 p-5 bg-light">
        <div id="carouselProyectos" class="carousel slide mx-auto" data-bs-ride="carousel" style="max-width: 900px;">
          <div class="carousel-inner">
            <!-- Proyecto 1 -->
            <div class="carousel-item active">
              <div class="card shadow-sm border-0 rounded-4 p-4">
                <img src="img/proyecto1.png" class="d-block mx-auto img-fluid rounded mb-3" alt="Maquinarias Casalu">
                <div class="proyecto-contenido">
                  <div class="proyecto-etiquetas d-flex justify-content-center flex-wrap gap-2 mb-2">
                    <span class="badge bg-primary">Java</span>
                    <span class="badge bg-warning text-dark">JavaScript</span>
                  </div>
                  <h3 class="fw-bold">Maquinarias Casalu</h3>
                  <p class="text-muted">Sistema de ventas para una empresa de hornos industriales en Huancayo.</p>
                </div>
              </div>
            </div>
            <!-- Proyecto 2 -->
            <div class="carousel-item">
              <div class="card shadow-sm border-0 rounded-4 p-4">
                <img src="img/proyecto2.png" class="d-block mx-auto img-fluid rounded mb-3" alt="Yudid Salon de Belleza">
                <div class="proyecto-contenido">
                  <div class="proyecto-etiquetas d-flex justify-content-center flex-wrap gap-2 mb-2">
                    <span class="badge bg-danger">HTML</span>
                    <span class="badge bg-primary">CSS</span>
                    <span class="badge bg-warning text-dark">JavaScript</span>
                    <span class="badge bg-success">Responsive</span>
                  </div>
                  <h3 class="fw-bold">Yudid Salón de Belleza</h3>
                  <p class="text-muted">Web profesional que presenta servicios y productos de belleza con diseño responsive.</p>
                </div>
              </div>
            </div>
            <!-- Proyecto 3 -->
            <div class="carousel-item">
              <div class="card shadow-sm border-0 rounded-4 p-4">
                <img src="img/proyecto3.png" class="d-block mx-auto img-fluid rounded mb-3" alt="Portafolio Personal">
                <div class="proyecto-contenido">
                  <div class="proyecto-etiquetas d-flex justify-content-center flex-wrap gap-2 mb-2">
                    <span class="badge bg-danger">HTML</span>
                    <span class="badge bg-primary">CSS</span>
                    <span class="badge bg-warning text-dark">JavaScript</span>
                    <span class="badge bg-dark">Bootstrap</span>
                  </div>
                  <h3 class="fw-bold">Portafolio Personal</h3>
                  <p class="text-muted">Mi sitio personal para mostrar proyectos, habilidades y contacto profesional.</p>
                </div>
              </div>
            </div>
          </div>
          <!-- Controles del carrusel -->
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselProyectos" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Anterior</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselProyectos" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Siguiente</span>
          </button>
        </div>
      </div>
    </div>
  </section>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
	<script src="/script.js" is:inline></script>
</Layout>