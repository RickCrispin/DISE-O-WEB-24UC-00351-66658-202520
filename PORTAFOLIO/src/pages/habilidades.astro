---
	import Layout from "../layouts/Layout.astro";
---

<Layout>
   <!-- ================= SECCIÓN HABILIDADES ================= -->
  <section id="habilidades">
    <div class="container">
      <div class="seccion-titulo">
        <h2>Mis Habilidades</h2>
      </div>
      <div class="habilidades-contenedor">
        <!-- Lenguajes de Programación -->
        <div class="categoria-habilidad card shadow-sm border-0 rounded-3 p-4 mb-4">
          <div class="categoria-titulo mb-3">
            <i class="fas fa-code"></i>
            <h3>Lenguajes de Programación</h3>
          </div>
          <p class="mb-2">Java</p>
          <div class="progress mb-3" style="height: 20px;">
            <div class="progress-bar bg-primary progress-bar-striped progress-bar-animated" role="progressbar" style="width: 65%" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100">65%</div>
          </div>
          <p class="mb-2">C++</p>
          <div class="progress mb-3" style="height: 20px;">
            <div class="progress-bar bg-info progress-bar-striped" role="progressbar" style="width: 60%" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100">60%</div>
          </div>
          <p class="mb-2">Python</p>
          <div class="progress" style="height: 20px;">
            <div class="progress-bar bg-success" role="progressbar" style="width: 70%" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100">70%</div>
          </div>
        </div>
        <!-- Desarrollo Web -->
        <div class="categoria-habilidad card shadow-sm border-0 rounded-3 p-4 mb-4">
          <div class="categoria-titulo mb-3">
            <i class="fas fa-laptop-code"></i>
            <h3>Desarrollo Web</h3>
          </div>
          <p class="mb-2">HTML</p>
          <div class="progress mb-3" style="height: 20px;">
            <div class="progress-bar bg-warning text-dark progress-bar-striped" role="progressbar" style="width: 85%" aria-valuenow="85" aria-valuemin="0" aria-valuemax="100">85%</div>
          </div>
          <p class="mb-2">CSS</p>
          <div class="progress mb-3" style="height: 20px;">
            <div class="progress-bar bg-info progress-bar-striped" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">75%</div>
          </div>
          <p class="mb-2">JavaScript</p>
          <div class="progress" style="height: 20px;">
            <div class="progress-bar bg-danger progress-bar-striped progress-bar-animated" role="progressbar" style="width: 60%" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100">60%</div>
          </div>
        </div>
        <!-- Herramientas -->
        <div class="categoria-habilidad card shadow-sm border-0 rounded-3 p-4 mb-4">
          <div class="categoria-titulo mb-3">
            <i class="fas fa-tools"></i>
            <h3>Herramientas</h3>
          </div>
          <p class="mb-2">Git</p>
          <div class="progress mb-3" style="height: 20px;">
            <div class="progress-bar bg-dark progress-bar-striped" role="progressbar" style="width: 55%" aria-valuenow="55" aria-valuemin="0" aria-valuemax="100">55%</div>
          </div>
          <p class="mb-2">VS Code</p>
          <div class="progress mb-3" style="height: 20px;">
            <div class="progress-bar bg-primary progress-bar-striped" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100">80%</div>
          </div>
          <p class="mb-2">MySQL</p>
          <div class="progress" style="height: 20px;">
            <div class="progress-bar bg-success progress-bar-striped" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">50%</div>
          </div>
        </div>
      </div>
    </div>
  </section>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
	<script src="/script.js" is:inline></script>
</Layout>