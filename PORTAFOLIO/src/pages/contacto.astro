---
	import Layout from "../layouts/Layout.astro";
---

<Layout>
<!-- ================= SECCIÓN CONTACTO ================= -->
<section id="contacto">
    <div class="container">
      <div class="seccion-titulo">
        <h2>Contáctame</h2>
      </div>
      <div class="contacto-container">
        <!-- Información de contacto -->
        <div class="contacto-info">
          <h3>¿Tienes alguna pregunta o propuesta?</h3>
          <p>Estoy disponible para colaboraciones, proyectos o simplemente para charlar sobre desarrollo y tecnología. ¡No dudes en contactarme!</p>
          <div class="contacto-metodos">
            <div class="contacto-metodo">
              <i class="fas fa-envelope"></i>
              <div>
                <h4>Email</h4>
                <p>74029241@continental.edu.pe</p>
              </div>
            </div>
            <div class="contacto-metodo">
              <i class="fas fa-map-marker-alt"></i>
              <div>
                <h4>Ubicación</h4>
                <p>Perú</p>
              </div>
            </div>
            <div class="contacto-metodo">
              <i class="fas fa-user-graduate"></i>
              <div>
                <h4>Universidad</h4>
                <p>Continental</p>
              </div>
            </div>
          </div>
        </div>
        <!-- Formulario de contacto -->
        <div class="contacto-formulario">
          <form id="formulario-contacto" action="https://formspree.io/f/74029241@continental.edu.pe" method="POST">
            <div class="form-grupo">
              <label for="nombre">Nombre completo *</label>
              <input type="text" id="nombre" name="nombre" required>
            </div>
            <div class="form-grupo">
              <label for="correo">Correo electrónico *</label>
              <input type="email" id="correo" name="correo" required>
            </div>
            <div class="form-grupo">
              <label for="asunto">Asunto</label>
              <input type="text" id="asunto" name="asunto">
            </div>
            <div class="form-grupo">
              <label for="mensaje">Mensaje *</label>
              <textarea id="mensaje" name="mensaje" rows="5" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary btn-enviar">Enviar mensaje</button>
          </form>
        </div>
      </div>
    </div>
  </section>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
	<script src="/script.js" is:inline></script>
</Layout>