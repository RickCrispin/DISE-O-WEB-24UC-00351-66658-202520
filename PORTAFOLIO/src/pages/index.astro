	---
	import Layout from "../layouts/Layout.astro";
	---

	<Layout>
	<!-- ================= SECCIÓN INICIO / HERO ================= -->
	<section id="inicio" class="mostrar py-5 text-center bg-light">
		<div class="container">
		<div class="row align-items-center">
			<div class="col-md-6">
			<h1 class="hero-title typewriter">
				<span id="typewriter-text"></span>
			</h1>
			<p class="hero-subtitle animated-fadein">
				Desarrollador web y futuro ingeniero de sistemas con pasión por
				crear soluciones digitales creativas e innovadoras.
			</p>
			<div class="hero-btns d-flex justify-content-center gap-3">
				<a href="/proyectos" class="btn btn-primary">Ver mis proyectos</a>
				<a href="/contacto" class="btn btn-outline-primary">Contáctame</a>
			</div>
			</div>
			<div class="col-md-6">
			<img
				src="/img/perfil.png"
				alt="Rick Crispin programando"
				class="hero-image img-fluid"
			/>
			</div>
		</div>
		</div>
	</section>
	
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
	<script src="/script.js" is:inline></script>
	</Layout>
